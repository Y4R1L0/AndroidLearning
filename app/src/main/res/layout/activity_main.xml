<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonExp"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="120dp"
        android:onClick="ExpandBtn"
        android:text="@string/expand_me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FFFFFF"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonCounter"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="88dp"
        android:onClick="BtnCnt"
        android:text="@string/click_me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/CntDwnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="88dp"
        android:onClick="CntDButton"
        android:text="@string/countdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCounter"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>